---
const {image, title, description, tags, href, alt} = Astro.props;
import Button from "./JSX/Button";
---


   <a  class="flex" href={href}> <div
            class="flex gap-8 flex-col justify-center items-center w-80 font-truculenta bg-black p-5 rounded-lg "
    >


        <img src={image} alt={alt} class="w-full h-48 object-cover"/>
        <div class="flex gap-3 flex-col w-full  flex-grow">
            <h3 class="text-light-cream text-2xl font-semibold mb-auto">{title}</h3>
            <p class="text-light-cream text-base">{description}</p>
            <div class="flex items-center gap-3">
                {
                    tags.nodes.map((tag) => (
                            <span data-type={tag.id}
                                  id={tag.id}
                                  class="text-white bg-red text-xs font-medium px-2.5 py-1 rounded-lg font-truculenta"
                            >
            {tag.name}
          </span>
                    ))
                }
            </div>
        </div>
        <Button client:load color="cream" size="medium" href={href}>
            Voir plus
        </Button
        >

    </div>
   </a>
