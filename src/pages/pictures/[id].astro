---
import { wpquery } from "../../graphql/wordPressQuery";
import Layout from "../../Layout/Head.astro";
import NavBar from "../../components/NavBar";
import CardProject from "../../components/CardProject.astro";

export async function getStaticPaths() {
  const data = await wpquery({
    query: `
      {
        photos {
          nodes {
            id
          }
        }
      }
    `,
  });

  const paths = data.photos.nodes.map((photo) => ({
    params: { id: photo.id.toString() },
  }));

  return paths;
}

const { id } = Astro.params;

const data = await wpquery({
  query: `
    {
      photo(id: "${id}") {
        id
        photos {
        description
        titre
        tags {
          nodes {
            id
            name
          }
        }
        miniature {
          node {
            altText
            sourceUrl
          }
        }
      }
      }
    }
  `,
});

const photo = data.photo;
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PORTFOLIO</title>
    <Layout title="PORTFOLIO" />
  </head>
  <body>
    <header>
      <NavBar client:load />
    </header>

    <main>
      <div
        class="flex justify-center items-center flex-col gap-10 flex-wrap p-5"
      >
        <h1 class="font-truculenta font-black text-black text-6xl">
          Mes photos
        </h1>
        <div
          class="flex flex-row flex-wrap gap-10 w-full items-center justify-center"
        >
          <CardProject
            image={photo.photos.miniature.node.sourceUrl}
            alt={photo.photos.miniature.node.altText}
            title={photo.photos.titre}
            description={photo.photos.description}
            tags={photo.photos.tags}
          />
        </div>
      </div>
    </main>
  </body>
</html>
